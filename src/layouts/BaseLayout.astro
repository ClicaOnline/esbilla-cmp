---
import Header from '../components/Header.astro';
import { useTranslations } from '../i18n/utils';
import { languages } from '../i18n/ui';
import '../styles/global.css';
const { title, lang } = Astro.props;
const t = useTranslations(lang as keyof typeof languages);
---
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Esbilla CMP</title>
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Serif&family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
  </head>
  <body class="bg-[#F8F5F2] text-stone-900 font-sans selection:bg-amber-200">
    <Header lang={lang} />
    
    <main id="main-content">
      <slot />
    </main>

    <footer class="mt-20 border-t border-stone-200 bg-stone-100/50 py-12">
      <div class="max-w-5xl mx-auto px-6 grid grid-cols-1 md:grid-cols-3 gap-12 text-stone-500 text-sm">
        <div class="space-y-4">
          <p class="font-bold text-stone-800 uppercase tracking-widest text-xs">{t('footer.gobernanza')}</p>
          <p>{t('footer.claim')}</p>
        </div>
        <div class="flex justify-center items-end gap-8">
           <div class="w-8 h-12 bg-stone-300 rounded-t-full opacity-50"></div>
           <div class="w-8 h-12 bg-stone-300 rounded-t-full opacity-50"></div>
           <div class="w-8 h-12 bg-stone-300 rounded-t-full opacity-50"></div>
        </div>
        <div class="text-right">
          <p>&copy; 2026 Esbilla CMP - Made with ðŸ’™ in Asturias.</p>
          <p>Llibre como'l vientu nos puertos.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  h1, h2 { font-family: 'Instrument Serif', serif; }
</style>