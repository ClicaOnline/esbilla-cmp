---
import { languages } from '../i18n/ui';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
---
<ul class="flex gap-2">
  {Object.entries(languages).map(([code, label]) => (
    <li>
      <a 
        href={`/${code}/`} 
        class={`text-sm px-2 py-1 rounded-md transition-colors ${lang === code ? 'bg-indigo-600 text-white' : 'hover:bg-slate-100 text-slate-600'}`}
      >
        {label}
      </a>
    </li>
  ))}
</ul>