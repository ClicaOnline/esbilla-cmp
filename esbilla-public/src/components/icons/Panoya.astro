---
// esbilla-public/src/components/Panoya.astro
interface Props {
  variant?: 'realista' | 'minimalista' | 'geometrica';
  size?: string | number;
  class?: string;
  primary?: string;
  secondary?: string;
  accent?: string;
}

const { 
  variant = "realista", 
  size = "128", 
  class: className,
  primary = "#FFBF00",
  secondary = "#C2A561",
  accent = "#2F6E8D"
} = Astro.props;

// Estilos din√°micos para inyectar los colores del Dashboard
const styles = {
  "--esbilla-primary": primary,
  "--esbilla-secondary": secondary,
  "--esbilla-accent": accent,
};
---

<div class={`panoya-container ${className}`} style={styles}>
  {variant === 'realista' && (
    <svg viewBox="0 0 1024 1024" width={size} height={size} fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M512 900C300 900 200 700 200 400s150-300 312-350c162 50 312 50 312 350s-100 500-312 500z" fill="var(--esbilla-accent)" opacity="0.8"/>
      <path d="M512 800c-80 0-120-100-120-300s40-400 120-400 120 200 120 400-40-300-120-300z" fill="var(--esbilla-primary)"/>
      <circle cx="512" cy="400" r="15" fill="var(--esbilla-secondary)"/>
      <circle cx="480" cy="450" r="15" fill="var(--esbilla-secondary)"/>
      <circle cx="544" cy="450" r="15" fill="var(--esbilla-secondary)"/>
    </svg>
  )}

  {variant === 'minimalista' && (
    <svg viewBox="0 0 128 128" width={size} height={size} fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M64 120c-30 0-50-40-50-80S34 10 64 10s50 30 50 30-20 80-50 80z" fill="var(--esbilla-accent)"/>
      <ellipse cx="64" cy="60" rx="25" ry="45" fill="var(--esbilla-primary)"/>
    </svg>
  )}

  {variant === 'geometrica' && (
    <svg viewBox="0 0 128 128" width={size} height={size} fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M64 15 L84 45 L64 75 L44 45 Z" fill="var(--esbilla-primary)"/>
      <path d="M64 45 L84 75 L64 105 L44 75 Z" fill="var(--esbilla-primary)" opacity="0.7"/>
      <path d="M64 105 L72 120 L56 120 Z" fill="var(--esbilla-secondary)"/>
    </svg>
  )}
</div>

<style>
  .panoya-container {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  svg {
    height: auto;
    max-width: 100%;
  }
</style>