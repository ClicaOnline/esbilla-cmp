---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/utils';
import { languages } from '../../i18n/ui';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);
---

<BaseLayout title={t('saas.hero.new.title')} lang={lang}>
  <!-- Hero Section -->
  <section class="relative py-20 px-8 overflow-hidden bg-gradient-to-br from-amber-50 via-stone-50 to-amber-100">
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-40"></div>
    </div>

    <div class="relative z-10 max-w-5xl mx-auto text-center">
      <div class="inline-flex items-center gap-3 px-6 py-3 bg-white/80 border border-amber-200 rounded-full backdrop-blur-sm mb-6">
        <span class="relative flex h-3 w-3">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-amber-500 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-3 w-3 bg-amber-500"></span>
        </span>
        <p class="text-amber-700 font-bold text-sm tracking-widest uppercase">{t('saas.soon')}</p>
      </div>

      <h1 class="text-5xl md:text-6xl font-bold text-stone-900 mb-6">
        {t('saas.hero.new.title')}
      </h1>
      <p class="text-xl text-stone-600 mb-4 max-w-3xl mx-auto">
        {t('saas.hero.new.subtitle')}
      </p>
      <p class="text-lg text-stone-500 max-w-2xl mx-auto">
        {t('saas.hero.new.desc')}
      </p>
    </div>
  </section>

  <!-- Pricing Plans Section -->
  <section class="max-w-7xl mx-auto px-8 py-20">
    <h2 class="text-4xl font-bold text-stone-900 text-center mb-16">
      {t('saas.plans.title')}
    </h2>

    <div class="grid md:grid-cols-3 gap-8">
      <!-- Plan Comunidad (Free) -->
      <div class="bg-white rounded-3xl p-8 shadow-sm border border-stone-200 hover:shadow-lg transition-shadow">
        <div class="mb-6">
          <h3 class="text-2xl font-bold text-stone-900 mb-2">{t('saas.plans.free.title')}</h3>
          <div class="flex items-baseline gap-2 mb-3">
            <span class="text-4xl font-bold text-stone-900">{t('saas.plans.free.price')}</span>
          </div>
          <p class="text-stone-600 text-sm">{t('saas.plans.free.desc')}</p>
        </div>

        <ul class="space-y-4 mb-8">
          <li class="flex items-start gap-3">
            <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-stone-700">{t('saas.plans.free.feature1')}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-stone-700">{t('saas.plans.free.feature2')}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-stone-700">{t('saas.plans.free.feature3')}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-stone-700">{t('saas.plans.free.feature4')}</span>
          </li>
        </ul>

        <button class="w-full px-6 py-3 bg-stone-100 text-stone-800 rounded-xl font-semibold hover:bg-stone-200 transition-colors">
          {t('saas.cta.button')}
        </button>
      </div>

      <!-- Plan Profesional (Pro) -->
      <div class="bg-gradient-to-br from-amber-500 to-amber-600 rounded-3xl p-8 shadow-lg border-2 border-amber-400 transform md:scale-105 relative">
        <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 px-4 py-1 bg-amber-900 text-white text-sm font-bold rounded-full">
          Popular
        </div>

        <div class="mb-6">
          <h3 class="text-2xl font-bold text-white mb-2">{t('saas.plans.pro.title')}</h3>
          <div class="flex items-baseline gap-2 mb-3">
            <span class="text-4xl font-bold text-white">{t('saas.plans.pro.price')}</span>
          </div>
          <p class="text-amber-100 text-sm">{t('saas.plans.pro.desc')}</p>
        </div>

        <ul class="space-y-4 mb-8">
          <li class="flex items-start gap-3">
            <svg class="w-6 h-6 text-white flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-white">{t('saas.plans.pro.feature1')}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-6 h-6 text-white flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-white">{t('saas.plans.pro.feature2')}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-6 h-6 text-white flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-white">{t('saas.plans.pro.feature3')}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-6 h-6 text-white flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-white">{t('saas.plans.pro.feature4')}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-6 h-6 text-white flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-white">{t('saas.plans.pro.feature5')}</span>
          </li>
        </ul>

        <button class="w-full px-6 py-3 bg-white text-amber-600 rounded-xl font-semibold hover:bg-amber-50 transition-colors shadow-md">
          {t('saas.cta.button')}
        </button>
      </div>

      <!-- Plan Empresa (Enterprise) -->
      <div class="bg-white rounded-3xl p-8 shadow-sm border border-stone-200 hover:shadow-lg transition-shadow">
        <div class="mb-6">
          <h3 class="text-2xl font-bold text-stone-900 mb-2">{t('saas.plans.enterprise.title')}</h3>
          <div class="flex items-baseline gap-2 mb-3">
            <span class="text-4xl font-bold text-stone-900">{t('saas.plans.enterprise.price')}</span>
          </div>
          <p class="text-stone-600 text-sm">{t('saas.plans.enterprise.desc')}</p>
        </div>

        <ul class="space-y-4 mb-8">
          <li class="flex items-start gap-3">
            <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-stone-700">{t('saas.plans.enterprise.feature1')}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-stone-700">{t('saas.plans.enterprise.feature2')}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-stone-700">{t('saas.plans.enterprise.feature3')}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-stone-700">{t('saas.plans.enterprise.feature4')}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-stone-700">{t('saas.plans.enterprise.feature5')}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-stone-700">{t('saas.plans.enterprise.feature6')}</span>
          </li>
        </ul>

        <button class="w-full px-6 py-3 bg-stone-900 text-white rounded-xl font-semibold hover:bg-stone-800 transition-colors">
          Contactar Ventas
        </button>
      </div>
    </div>
  </section>

  <!-- Why Choose Esbilla SaaS Section -->
  <section class="max-w-6xl mx-auto px-8 py-20">
    <h2 class="text-4xl font-bold text-stone-900 text-center mb-16">
      {t('saas.why.title')}
    </h2>

    <div class="grid md:grid-cols-3 gap-8">
      <!-- Transparencia -->
      <div class="bg-blue-50 rounded-2xl p-8 border border-blue-200">
        <div class="w-14 h-14 bg-blue-100 rounded-2xl flex items-center justify-center mb-6">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-blue-900 mb-4">
          {t('saas.why.transparency.title')}
        </h3>
        <p class="text-blue-800 leading-relaxed">
          {t('saas.why.transparency.desc')}
        </p>
      </div>

      <!-- Cumplimiento -->
      <div class="bg-green-50 rounded-2xl p-8 border border-green-200">
        <div class="w-14 h-14 bg-green-100 rounded-2xl flex items-center justify-center mb-6">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-green-900 mb-4">
          {t('saas.why.compliance.title')}
        </h3>
        <p class="text-green-800 leading-relaxed">
          {t('saas.why.compliance.desc')}
        </p>
      </div>

      <!-- Soporte -->
      <div class="bg-amber-50 rounded-2xl p-8 border border-amber-200">
        <div class="w-14 h-14 bg-amber-100 rounded-2xl flex items-center justify-center mb-6">
          <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-amber-900 mb-4">
          {t('saas.why.support.title')}
        </h3>
        <p class="text-amber-800 leading-relaxed">
          {t('saas.why.support.desc')}
        </p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="max-w-4xl mx-auto px-8 py-20">
    <div class="bg-gradient-to-br from-stone-900 to-stone-800 rounded-3xl p-12 text-center shadow-2xl">
      <h2 class="text-4xl font-bold text-white mb-4">
        {t('saas.cta.title')}
      </h2>
      <p class="text-xl text-stone-300 mb-8">
        {t('saas.cta.desc')}
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-6">
        <a href="https://app.esbilla.com"
           class="inline-flex items-center gap-2 px-8 py-4 bg-amber-500 text-white rounded-xl font-bold text-lg hover:bg-amber-400 transition-colors shadow-lg">
          {t('saas.cta.button')}
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        <a href="/ast/docs"
           class="inline-flex items-center gap-2 px-8 py-4 bg-white/10 text-white border border-white/20 rounded-xl font-semibold text-lg hover:bg-white/20 transition-colors">
          Ver Documentación
        </a>
      </div>

      <p class="text-stone-400 text-sm flex items-center justify-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        {t('saas.cta.note')}
      </p>
    </div>
  </section>

  <!-- Self-Hosted Option Section -->
  <section class="max-w-4xl mx-auto px-8 pb-20">
    <div class="bg-gradient-to-r from-purple-50 to-blue-50 rounded-2xl p-8 border border-purple-200">
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
            </svg>
          </div>
        </div>
        <div>
          <h3 class="text-xl font-bold text-purple-900 mb-2">
            ¿Prefieres Auto-Albergar?
          </h3>
          <p class="text-purple-800 mb-4">
            Esbilla CMP es 100% código abierto. Descarga, despliega en tu infraestructura y mantén control total sin costos de suscripción.
          </p>
          <a href="https://github.com/ClicaOnline/esbilla-cmp"
             target="_blank"
             class="inline-flex items-center gap-2 text-purple-700 font-semibold hover:text-purple-900">
            Ver en GitHub
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
