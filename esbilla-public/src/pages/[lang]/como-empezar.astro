          <div class="text-5xl">‚öôÔ∏è</div>
          <div class="flex-1">
            <h3 class="text-3xl font-bold text-stone-900 mb-2">{t('modes.manual.title')}</h3>
            <p class="text-lg text-amber-600 mb-4">{t('modes.manual.subtitle')}</p>
            <p class="text-stone-600 mb-6" set:html={t('modes.manual.desc')}></p>
            <div class="grid md:grid-cols-3 gap-4 mb-6">
              <div class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-sm text-stone-600">{t('modes.manual.pro1')}</span>
              </div>
              <div class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-sm text-stone-600">{t('modes.manual.pro2')}</span>
              </div>
              <div class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-sm text-stone-600">{t('modes.manual.pro3')}</span>
              </div>
            </div>
            <p class="text-sm text-stone-500 italic">{t('modes.manual.ideal')}</p>
          </div>
        </div>
      </div>

      <!-- Simplified Mode -->
      <div class="bg-white rounded-3xl p-8 md:p-12 shadow-sm border border-stone-200">
        <div class="flex items-start gap-6">
          <div class="text-5xl">üöÄ</div>
          <div class="flex-1">
            <h3 class="text-3xl font-bold text-stone-900 mb-2">{t('modes.simplified.title')}</h3>
            <p class="text-lg text-blue-600 mb-4">{t('modes.simplified.subtitle')}</p>
            <p class="text-stone-600 mb-6">{t('modes.simplified.desc')}</p>
            <div class="grid md:grid-cols-3 gap-4 mb-6">
              <div class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
