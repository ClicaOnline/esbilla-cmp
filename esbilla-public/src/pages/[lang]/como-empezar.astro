---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/utils';
import { languages } from '../../i18n/ui';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);
---

<BaseLayout title={t('nav.getstarted')} lang={lang}>
  <!-- Hero Section -->
  <section class="relative min-h-[50vh] flex items-center overflow-hidden bg-gradient-to-br from-amber-50 via-white to-stone-50">
    <div class="relative z-10 max-w-5xl mx-auto px-8 w-full py-16">
      <div class="text-center space-y-6">
        <h1 class="text-5xl md:text-7xl font-artesana text-stone-900">
          {t('getstarted.hero.title')} <span class="text-maiz italic">{t('getstarted.hero.highlight')}</span>
        </h1>
        <p class="text-xl text-stone-600 leading-relaxed max-w-3xl mx-auto">
          {t('getstarted.hero.desc')}
        </p>
      </div>
    </div>
  </section>

  <!-- 3 Steps Section -->
  <section class="max-w-6xl mx-auto px-8 py-20">
    <div class="grid md:grid-cols-3 gap-8">
      <!-- Step 1 -->
      <div class="bg-white rounded-3xl p-8 shadow-sm border border-stone-200 hover:shadow-lg transition-shadow">
        <div class="w-16 h-16 bg-amber-100 rounded-2xl flex items-center justify-center mb-6">
          <span class="text-3xl">1Ô∏è‚É£</span>
        </div>
        <h3 class="text-2xl font-bold text-stone-900 mb-4">{t('getstarted.step1.title')}</h3>
        <p class="text-stone-600 mb-6">{t('getstarted.step1.desc')}</p>
        <a
          href="https://app.esbilla.com"
          target="_blank"
          class="inline-flex items-center gap-2 px-6 py-3 bg-amber-500 text-white rounded-xl font-semibold hover:bg-amber-600 transition-colors"
        >
          {t('getstarted.step1.action')}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>

      <!-- Step 2 -->
      <div class="bg-white rounded-3xl p-8 shadow-sm border border-stone-200 hover:shadow-lg transition-shadow">
        <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center mb-6">
          <span class="text-3xl">2Ô∏è‚É£</span>
        </div>
        <h3 class="text-2xl font-bold text-stone-900 mb-4">{t('getstarted.step2.title')}</h3>
        <p class="text-stone-600 mb-6">{t('getstarted.step2.desc')}</p>
        <a
          href={`/${lang}/modos`}
          class="inline-flex items-center gap-2 px-6 py-3 bg-blue-500 text-white rounded-xl font-semibold hover:bg-blue-600 transition-colors"
        >
          Ver Modos
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>

      <!-- Step 3 -->
      <div class="bg-white rounded-3xl p-8 shadow-sm border border-stone-200 hover:shadow-lg transition-shadow">
        <div class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mb-6">
          <span class="text-3xl">3Ô∏è‚É£</span>
        </div>
        <h3 class="text-2xl font-bold text-stone-900 mb-4">{t('getstarted.step3.title')}</h3>
        <p class="text-stone-600 mb-6">{t('getstarted.step3.desc')}</p>
        <a
          href="https://github.com/ClicaOnline/esbilla-cmp"
          target="_blank"
          class="inline-flex items-center gap-2 px-6 py-3 bg-green-500 text-white rounded-xl font-semibold hover:bg-green-600 transition-colors"
        >
          {t('getstarted.step3.action')}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Detailed Modes Section -->
  <section class="max-w-6xl mx-auto px-8 py-20 bg-stone-50 -mx-4 my-12 rounded-3xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-artesana text-stone-900 mb-4">
        {t('modes.title')}
      </h2>
      <p class="text-xl text-stone-600">{t('modes.subtitle')}</p>
    </div>

    <div class="space-y-12">
      <!-- Manual Mode -->
      <div class="bg-white rounded-3xl p-8 md:p-12 shadow-sm border border-stone-200">
