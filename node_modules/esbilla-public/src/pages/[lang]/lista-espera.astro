---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/utils';
import { languages } from '../../i18n/ui';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);
---

<BaseLayout title={t('waitlist.hero.title')} description={t('waitlist.hero.subtitle')} lang={lang}>
  <!-- Hero Section -->
  <section class="relative min-h-[40vh] flex items-center overflow-hidden bg-gradient-to-br from-amber-50 via-white to-stone-50">
    <div class="relative z-10 max-w-4xl mx-auto px-8 w-full py-16 text-center">
      <h1 class="text-5xl md:text-6xl font-artesana text-stone-900 mb-4">
        {t('waitlist.hero.title')}
      </h1>
      <p class="text-xl text-stone-600 leading-relaxed max-w-2xl mx-auto">
        {t('waitlist.hero.subtitle')}
      </p>
    </div>
  </section>

  <!-- Form Section -->
  <section class="max-w-2xl mx-auto px-8 py-16">
    <div class="bg-white rounded-3xl p-8 shadow-xl border border-stone-200">
      <h2 class="text-2xl font-bold text-stone-900 mb-6 text-center">
        {t('waitlist.form.title')}
      </h2>

      <form id="waitlist-form" class="space-y-6">
        <!-- Name -->
        <div>
          <label for="name" class="block text-sm font-semibold text-stone-700 mb-2">
            {t('waitlist.form.name.label')} *
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            placeholder={t('waitlist.form.name.placeholder')}
            class="w-full px-4 py-3 border border-stone-300 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all"
          />
        </div>

        <!-- Email -->
        <div>
          <label for="email" class="block text-sm font-semibold text-stone-700 mb-2">
            {t('waitlist.form.email.label')} *
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            placeholder={t('waitlist.form.email.placeholder')}
            class="w-full px-4 py-3 border border-stone-300 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all"
          />
        </div>

        <!-- Company/Project -->
        <div>
          <label for="company" class="block text-sm font-semibold text-stone-700 mb-2">
            {t('waitlist.form.company.label')} *
          </label>
          <input
            type="text"
            id="company"
            name="company"
            required
            placeholder={t('waitlist.form.company.placeholder')}
            class="w-full px-4 py-3 border border-stone-300 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all"
          />
        </div>

        <!-- Plan Selection -->
        <div>
          <label for="plan" class="block text-sm font-semibold text-stone-700 mb-2">
            {t('waitlist.form.plan.label')} *
          </label>
          <select
            id="plan"
            name="plan"
            required
            class="w-full px-4 py-3 border border-stone-300 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all bg-white"
          >
            <option value="">Selecciona un plan</option>
            <option value="free">Free (De baldre) - 1 sitio</option>
            <option value="starter">Starter (Matagigantes) - 3€/mes - 5 sitios</option>
            <option value="growth">Growth (Recomendado) - 15€/mes - 20 sitios</option>
            <option value="agency">Agency - 50€/mes - Ilimitado</option>
          </select>
        </div>

        <!-- Domain -->
        <div>
          <label for="domain" class="block text-sm font-semibold text-stone-700 mb-2">
            {t('waitlist.form.domain.label')} *
          </label>
          <input
            type="url"
            id="domain"
            name="domain"
            required
            placeholder={t('waitlist.form.domain.placeholder')}
            class="w-full px-4 py-3 border border-stone-300 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all"
          />
        </div>

        <!-- Details -->
        <div>
          <label for="details" class="block text-sm font-semibold text-stone-700 mb-2">
            {t('waitlist.form.details.label')} *
          </label>
          <textarea
            id="details"
            name="details"
            required
            rows="4"
            placeholder={t('waitlist.form.details.placeholder')}
            class="w-full px-4 py-3 border border-stone-300 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all resize-none"
          ></textarea>
        </div>

        <!-- Phone (Optional) -->
        <div>
          <label for="phone" class="block text-sm font-semibold text-stone-700 mb-2">
            {t('waitlist.form.phone.label')}
          </label>
          <input
            type="tel"
            id="phone"
            name="phone"
            placeholder={t('waitlist.form.phone.placeholder')}
            class="w-full px-4 py-3 border border-stone-300 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all"
          />
        </div>

        <!-- Consent Checkbox -->
        <div class="flex items-start gap-3">
          <input
            type="checkbox"
            id="consent"
            name="consent"
            required
            class="mt-1 w-5 h-5 text-amber-500 border-stone-300 rounded focus:ring-amber-500"
          />
          <label for="consent" class="text-sm text-stone-600">
            {t('waitlist.form.consent').split('{link}')[0]}
            <button
              type="button"
              id="open-legal-modal"
              class="text-amber-600 font-semibold hover:underline"
            >
              {t('waitlist.form.consent.link')}
            </button>
            {t('waitlist.form.consent').split('{link}')[1]}
          </label>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          id="submit-btn"
          class="w-full px-6 py-4 bg-amber-500 text-white rounded-xl font-bold text-lg hover:bg-amber-600 transition-colors disabled:bg-stone-300 disabled:cursor-not-allowed"
        >
          {t('waitlist.form.submit')}
        </button>

        <!-- Success/Error Messages -->
        <div id="success-message" class="hidden p-4 bg-green-50 border border-green-200 rounded-xl">
          <h3 class="font-bold text-green-800 mb-1">{t('waitlist.success.title')}</h3>
          <p class="text-sm text-green-700">{t('waitlist.success.message')}</p>
        </div>

        <div id="error-message" class="hidden p-4 bg-red-50 border border-red-200 rounded-xl">
          <h3 class="font-bold text-red-800 mb-1">{t('waitlist.error.title')}</h3>
          <p class="text-sm text-red-700">{t('waitlist.error.message')}</p>
        </div>
      </form>
    </div>
  </section>

  <!-- Legal Modal -->
  <div id="legal-modal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 p-4">
    <div class="bg-white rounded-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto p-8 shadow-2xl">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-stone-900">{t('waitlist.legal.title')}</h2>
        <button
          id="close-legal-modal"
          class="text-stone-400 hover:text-stone-600 transition-colors"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <div class="space-y-6 text-stone-700">
        <p class="text-sm">{t('waitlist.legal.intro')}</p>

        <div class="bg-stone-50 rounded-lg p-4">
          <h3 class="font-bold text-stone-900 mb-2">{t('waitlist.legal.purpose.title')}</h3>
          <p class="text-sm">{t('waitlist.legal.purpose.text')}</p>
        </div>

        <div class="bg-stone-50 rounded-lg p-4">
          <h3 class="font-bold text-stone-900 mb-2">{t('waitlist.legal.legal.title')}</h3>
          <p class="text-sm">{t('waitlist.legal.legal.text')}</p>
        </div>

        <div class="bg-stone-50 rounded-lg p-4">
          <h3 class="font-bold text-stone-900 mb-2">{t('waitlist.legal.data.title')}</h3>
          <p class="text-sm">{t('waitlist.legal.data.text')}</p>
        </div>

        <div class="bg-stone-50 rounded-lg p-4">
          <h3 class="font-bold text-stone-900 mb-2">{t('waitlist.legal.retention.title')}</h3>
          <p class="text-sm">{t('waitlist.legal.retention.text')}</p>
        </div>

        <div class="bg-stone-50 rounded-lg p-4">
          <h3 class="font-bold text-stone-900 mb-2">{t('waitlist.legal.rights.title')}</h3>
          <p class="text-sm">{t('waitlist.legal.rights.text')}</p>
        </div>
      </div>

      <button
        id="close-legal-modal-btn"
        class="mt-6 w-full px-6 py-3 bg-stone-800 text-white rounded-xl font-semibold hover:bg-stone-900 transition-colors"
      >
        {t('waitlist.legal.close')}
      </button>
    </div>
  </div>
</BaseLayout>

<script>
  import { db } from '../../lib/firebase';
  import { collection, addDoc, serverTimestamp } from 'firebase/firestore';

  const form = document.getElementById('waitlist-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const successMessage = document.getElementById('success-message') as HTMLDivElement;
  const errorMessage = document.getElementById('error-message') as HTMLDivElement;
  const openLegalBtn = document.getElementById('open-legal-modal') as HTMLButtonElement;
  const closeLegalBtn = document.getElementById('close-legal-modal') as HTMLButtonElement;
  const closeLegalModalBtn = document.getElementById('close-legal-modal-btn') as HTMLButtonElement;
  const legalModal = document.getElementById('legal-modal') as HTMLDivElement;

  // Legal modal controls
  openLegalBtn?.addEventListener('click', () => {
    legalModal?.classList.remove('hidden');
  });

  closeLegalBtn?.addEventListener('click', () => {
    legalModal?.classList.add('hidden');
  });

  closeLegalModalBtn?.addEventListener('click', () => {
    legalModal?.classList.add('hidden');
  });

  legalModal?.addEventListener('click', (e) => {
    if (e.target === legalModal) {
      legalModal.classList.add('hidden');
    }
  });

  // Form submission
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Hide previous messages
    successMessage?.classList.add('hidden');
    errorMessage?.classList.add('hidden');

    // Disable submit button
    submitBtn.disabled = true;
    const originalText = submitBtn.textContent;
    submitBtn.textContent = document.querySelector('[data-submitting]')?.textContent || 'Enviando...';

    try {
      const formData = new FormData(form);
      const data = {
        name: formData.get('name'),
        email: formData.get('email'),
        company: formData.get('company'),
        website: formData.get('domain'),           // Renombrado: domain → website
        message: formData.get('details'),          // Renombrado: details → message
        phone: formData.get('phone') || null,
        plan: formData.get('plan'),                // NUEVO: plan obligatorio
        consent: formData.get('consent') === 'on',
        locale: document.documentElement.lang || 'ast',  // Renombrado: language → locale
        source: 'landing',                         // NUEVO: origen del registro
        createdAt: serverTimestamp(),
        status: 'pending'
      };

      await addDoc(collection(db, 'waitlist'), data);

      // Show success message
      successMessage?.classList.remove('hidden');
      form.reset();

      // Scroll to success message
      successMessage?.scrollIntoView({ behavior: 'smooth', block: 'nearest' });

    } catch (error) {
      console.error('Error submitting waitlist form:', error);
      errorMessage?.classList.remove('hidden');
      errorMessage?.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = originalText;
    }
  });
</script>

<style>
  /* Add hidden data attribute for translation access */
  [data-submitting] {
    display: none;
  }
</style>
