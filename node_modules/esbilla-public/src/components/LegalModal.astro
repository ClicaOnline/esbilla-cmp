---
const { id, title } = Astro.props;
---
<dialog id={id} class="backdrop:bg-madera/50 backdrop:backdrop-blur-sm rounded-2xl border-2 border-piedra p-0 max-w-2xl w-[90%] overflow-hidden">
  <div class="bg-fondu p-8 relative">
    <form method="dialog">
      <button class="absolute top-4 right-4 text-madera hover:text-maiz font-bold">âœ•</button>
    </form>
    <h2 class="text-3xl mb-6">{title}</h2>
    <div class="prose text-stone-600">
      <slot />
    </div>
  </div>
</dialog>

<style>
  dialog::backdrop { animation: fadeIn 0.3s ease-out; }
  @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
</style>