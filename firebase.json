{
  "hosting": {
    "public": "esbilla-public/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "**/*.@(webp|woff2|css|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "esbilla-api",
          "region": "europe-southwest1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}