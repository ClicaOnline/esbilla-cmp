{
  "hosting": [
    {
      "target": "esbilla-public",
      "public": "esbilla-public/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "headers": [
        {
          "source": "**/*.@(webp|woff2|css|js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, immutable"
            }
          ]
        }
      ]
    },
    {
      "target": "esbilla-api",
      "rewrites": [
        {
          "source": "**",
          "run": {
            "serviceId": "esbilla-api",
            "region": "europe-southwest1"
          }
        }
      ]
    }
  ]
}