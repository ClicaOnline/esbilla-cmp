rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // HELPER FUNCTIONS
    // ============================================

    // Verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Obtener el documento del usuario actual
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Verificar el rol del usuario
    function getUserRole() {
      return getUserData().role;
    }

    function isAdmin() {
      return isAuthenticated() && getUserRole() in ['admin', 'superadmin'];
    }

    function isSuperAdmin() {
      return isAuthenticated() && getUserRole() == 'superadmin';
    }

    function isAuthorized() {
      return isAuthenticated() && getUserRole() in ['viewer', 'admin', 'superadmin'];
    }

    // Verificar si el usuario tiene acceso a un sitio específico
    function hasSiteAccess(siteId) {
      let userData = getUserData();
      // Admins y superadmins tienen acceso a todos los sitios
      return userData.role in ['admin', 'superadmin']
             || (userData.siteAccess != null && siteId in userData.siteAccess);
    }

    // Verificar si el usuario es owner o admin de un sitio
    function hasSiteAdminAccess(siteId) {
      let userData = getUserData();
      return userData.role in ['admin', 'superadmin']
             || (userData.siteAccess != null
                 && siteId in userData.siteAccess
                 && userData.siteAccess[siteId].role in ['owner', 'admin']);
    }

    // Colección de usuarios
    match /users/{userId} {
      // Cualquier usuario autenticado puede leer su propio documento
      allow read: if isAuthenticated() && request.auth.uid == userId;

      // Los admins pueden leer todos los usuarios
      allow read: if isAdmin();

      // Un usuario puede crear su propio documento (primer login)
      allow create: if isAuthenticated() && request.auth.uid == userId
                    && request.resource.data.role == 'pending';

      // Un usuario puede actualizar su lastLogin
      allow update: if isAuthenticated() && request.auth.uid == userId
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastLogin']);

      // Solo admins pueden actualizar roles de usuarios
      allow update: if isAdmin() && request.auth.uid != userId;

      // Solo superadmins pueden eliminar usuarios
      allow delete: if isSuperAdmin();
    }

    // ============================================
    // SITES COLLECTION (Multi-tenant)
    // ============================================
    match /sites/{siteId} {
      // Usuarios autorizados pueden leer sitios a los que tienen acceso
      // Admins pueden leer todos los sitios
      allow read: if isAdmin() || (isAuthorized() && hasSiteAccess(siteId));

      // Solo admins pueden crear sitios
      allow create: if isAdmin();

      // Admins globales o admins/owners del sitio pueden actualizar
      allow update: if isAdmin() || hasSiteAdminAccess(siteId);

      // Solo superadmins pueden eliminar sitios
      allow delete: if isSuperAdmin();
    }

    // ============================================
    // CONSENTS COLLECTION (GDPR-COMPLIANT)
    // ============================================
    // POLÍTICA DE RETENCIÓN: 3 años (1095 días)
    // Los documentos se eliminan automáticamente mediante TTL en 'expiresAt'
    //
    // PROTECCIÓN CONTRA MANIPULACIÓN EXTERNA:
    // - Solo el Admin SDK (API backend) puede crear registros
    // - NUNCA se pueden modificar o eliminar manualmente (audit trail)
    // - Los usuarios del dashboard solo pueden LEER (no escribir)
    //
    // CAMPOS REQUERIDOS (validados por la API):
    // - siteId: string (identificador del sitio)
    // - userHash: string (hash SHA-256 anónimo, GDPR-compliant)
    // - choices: map (elecciones del usuario)
    // - createdAt: timestamp (fecha de creación)
    // - expiresAt: timestamp (fecha de expiración para TTL)
    // ============================================
    match /consents/{consentId} {
      // LECTURA: Usuarios autorizados pueden leer consentimientos
      // Viewers solo pueden ver los de sitios a los que tienen acceso
      allow read: if isAdmin()
                  || (isAuthorized() && hasSiteAccess(resource.data.siteId));

      // CREACIÓN: BLOQUEADA para clientes del dashboard
      // Los consentimientos SOLO se crean desde la API backend
      // usando Firebase Admin SDK (bypasea estas reglas)
      // Esto previene que clientes maliciosos inyecten registros falsos
      allow create: if false;

      // ACTUALIZACIÓN: BLOQUEADA PERMANENTEMENTE
      // Los registros de consentimiento son INMUTABLES para auditoría GDPR
      // Cualquier "actualización" de consentimiento crea un NUEVO documento
      allow update: if false;

      // ELIMINACIÓN: BLOQUEADA PERMANENTEMENTE
      // Solo el TTL de Firestore puede eliminar documentos (automático tras 3 años)
      // Ni siquiera superadmins pueden eliminar registros manualmente
      // Esto garantiza el audit trail completo requerido por GDPR
      allow delete: if false;
    }

    // ============================================
    // CONFIG COLLECTION (per-site configuration)
    // ============================================
    match /config/{configId} {
      // Usuarios autorizados pueden leer la configuración
      allow read: if isAuthorized();

      // Solo admins pueden modificar la configuración global
      allow write: if isAdmin();
    }

    // ============================================
    // DAILY STATS COLLECTION (agregated stats per site)
    // ============================================
    match /dailyStats/{statsId} {
      // Usuarios pueden leer stats de sitios a los que tienen acceso
      allow read: if isAdmin()
                  || (isAuthorized() && hasSiteAccess(resource.data.siteId));

      // Stats se crean/actualizan vía Cloud Functions o Admin SDK
      allow write: if false;
    }

    // ============================================
    // ORGANIZATIONS COLLECTION (for SaaS model)
    // ============================================
    match /organizations/{orgId} {
      // Solo superadmins pueden gestionar organizaciones
      allow read, write: if isSuperAdmin();
    }
  }
}
